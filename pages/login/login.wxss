	width:	120rpx;
	height:1px;
	background-color:#e4e4e4;
}
.loginbottom_text{
	color:#D7D7D7;

}
.loginbottom_imgbox{
	margin-top:22rpx;
}
.loginbottom_imgbox image{
	width:84rpx;
	height:84rpx;
}
.loginbottom_bottom{
