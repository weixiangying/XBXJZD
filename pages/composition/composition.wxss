/* pages/composition/composition.wxss */
@import "/component/navigation/navigation.wxss";
page{
    background-color:#fff;
}
.topbox{
    width:100%;
    height:500rpx;
}
.composition_bg{
    width:100%;
    height:500rpx;
}
.topbox_position{
    top:0rpx;
    left:26rpx;
    width:100%;
}
.back-box{
    position:relative;
    left:0;
}
.topbox_title{
    font-size:56rpx;
    color:#fff;
    font-weight: bold;
    margin-top: 90rpx;
}
.top_inputbox{
    margin-top:28rpx;
    background-color: #fff;
    padding:0 26rpx 0 22rpx;
    width:538rpx;
    height:68rpx;
    line-height: 68rpx;
    border-radius: 6rpx;
    font-size:30rpx;
    color:#777;
}
.top_input{
    width:468rpx;
    height:32rpx;
}
.placeholder{
    color:#777;
}
.search_img{
    width:30rpx;
    height:32rpx;
}
/* search2 */
.component-class{
    padding:0 26rpx;
    border-bottom:none;
    
}
.back-box2{
    top:0;
    width:100rpx;
    height:10vh;
    position:absolute;
}
.newsearchbox{
    background-color:#fff;
    height:5vh;
    width:50%;
     padding:0rpx 24rpx;
    margin-left:75rpx;
    margin-top:4vh;
     border-radius: 6rpx;
    font-size:30rpx;
    color:#777;
}
.search_imgnew{
    margin-left:15rpx;
}
/* 正文 */
.compositionbox{
    border-top: 16rpx solid #f4f4f4;
}
.composition_padding{
    padding:40rpx 26rpx 0;
}
.maintitle image{
    width:27rpx;
    height: 31rpx;
    margin-right: 14rpx;
}
.itembox{
    border-bottom:1px solid #dfdfdf;
    padding:36rpx 0;
}
.title{
    line-height: 44rpx;
    word-break: break-all;
}
.title_text{
    display: inline-block;
    background-color:#fe5757;
    color:#fff;
    font-size:24rpx;
    height:32rpx;
    line-height: 32rpx;
    padding:0 16rpx;
    border-top-right-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
    border-top-left-radius: 13rpx;
    margin-left:14rpx;  
}
.item_style{
    color:#777;
    line-height: 66rpx;
}
.item_content{
    word-break: break-all;
    line-height: 38rpx;
}