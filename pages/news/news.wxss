page{
    background: #fff;
    padding-top:10vh;
}
.container{
    width: 100%;
    padding: 0 24rpx;
}
.news{
    width: 100%;
    padding: 40rpx 0 36rpx;
    border-bottom: 1rpx solid #dfdfdf;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
}
/* .news:last-child{
    border-bottom: none;
} */
.news-lt{
    width: 242rpx;
    height: 148rpx;
    border-radius: 25rpx;
    margin-right: 37rpx;
}
.news-img{
    width: 100%;
    height: 100%;
}
.news-rt{
    width: 60%;
}
.news-tit{
    width: 100%;
    height: 80rpx;
    font-size: 30rpx;
    color: #333;
    line-height: 40rpx;
    overflow: hidden;
    word-break: break-all;
    margin-bottom: 15rpx;
}
.news-tips{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
}
.tips-lt{
    width: 40%;
    font-size: 24rpx;
    color: #999;
}
.tips-rt{
    width: 60%;
    text-align: right;
}
.news-tip-img{
    /* width: 10%; */
    width: 28rpx;
    height: 24rpx;
    display: inline-block;
    vertical-align: middle;
    margin-right: 8rpx;
}
.news-tip-text{
    color: #999;
    font-size: 24rpx;
    margin-right: 34rpx;
}