/* pages/task/taskChoice/taskChoice.wxss */
page{
    background-color:#f4f4f4;
}
/* search */
.navigation-back-icon{
    position: absolute;
    left: 30rpx;
    /* top: 62%; */
    top:88rpx;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    width: 18rpx;
    height: 32rpx;
}
.search_box{
  z-index: 2;
   position:fixed;
  top:0rpx;
  left:0; 
  width:100%; 
  padding:60rpx 0 20rpx;
  background-color:#fff;
}
.search{
  width:420rpx;
  background-color:#f4f4f4;
  margin-left:80rpx;
  height:58rpx;
  border-radius: 6rpx;
}
.search image{
  width:30rpx;
  height:30rpx;
  margin:0 17rpx 0 26rpx;
}
.search input{
  color:a1a1a1;
  font-size:26rpx;
  display:block;
  width:510rpx;
  height:58rpx;
  line-height:58rpx;
}
.placeholder{
  color:a1a1a1;
  font-size:26rpx;
}


/*  */
.contentbox{
    margin-top:156rpx;
}
.itembox{
    padding:20rpx 0 0;
    background-color:#fff;
    margin-bottom:16rpx;
}
.item_img{
    width:146rpx;
    height: 146rpx;
    margin:0 40rpx 20rpx 26rpx;
}
.item_content{
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 36rpx;
    width:438rpx;
}
.item_bottom{
    border-top:1px solid #dfdfdf;
    color:#F04D4D;
    font-size:32rpx;
    line-height: 84rpx;
    height: 84rpx;
    text-align: right;
    padding-right: 26rpx;
}


.circle_img{
    width:36rpx;
    height: 36rpx;
    margin:50rpx 0rpx 0 26rpx;
}
.bottom_fixed{
    position: fixed;
    bottom:0;
    left:0;
    width: 100%;
    height: 98rpx;
    background-color: #fff;
    border-top: 1px solid #dfdfdf;
}
.bottom_fixed_new{
    width: 100%;
    height: 98rpx;
    background-color: #fff;
    border-top: 1px solid #dfdfdf;
}
.bottom_text1{
    margin:0 28rpx 0 26rpx;
    line-height: 98rpx;
}
.bottom_btn{
    width:160rpx;
    height: 70rpx;
    
    border-radius: 6rpx;
    color: #fff;
    font-size:28rpx;
    margin-right: 26rpx;
    line-height: 70rpx;
    text-align: center;
}


/* new */
.newbox{
    position:fixed;
    left:0;
    top:0;
    z-index:200;
    width:100%;
    height:100vh;
    background:rgba(0,0,0,.7);

}
.newbox_sm{
    bottom:0;
    left:0;
    width: 100%;
}
.newbox_top{
    height: 80rpx;
    line-height: 80rpx;
    background-color: #f4f4f4;
}
.newbox_toptext{
    text-align: right;
    margin-right:26rpx;
}
.itembox_new{
    margin-bottom:0;
}