/* pages/task/arrange/arrange.wxss */
page{
    background-color:#f4f4f4;
    padding-top: 10vh;
}
.mt15{
    margin-top:15rpx;
}
.itembox{
    background-color:#fff;
    height: 100rpx;
    line-height: 100rpx;
    display:flex;
    justify-content: space-between;
    align-items: center;
    padding:0 26rpx;
    font-size:32rpx;
    color:#333;
    border-bottom:1px solid #E7E7E7;
}
.arow_right{
    width:13rpx;
    height: 22rpx;
    margin-left:20rpx;
}
.itemboxbottom{
    padding:0 26rpx;
    background-color:#fff;
    border-bottom:1px solid #E7E7E7;
}
.item_bottomtext{
    line-height: 96rpx;
}
.imgs{
    width: 100%;
    height: 216rpx;
    background: #fff;
    /* padding: 32rpx 24rpx; */
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.scroll-box {
    width: 100%;
    height: 100%;
    white-space: nowrap; 
    background: #fff;
}
.scroll-item{
    position: relative; 
    width: 150rpx;
    height: 150rpx;
    margin-right: 34rpx;
    display: inline-block;
}
.hmwk-img{
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}
.del-img{
    position: absolute;
    top: 5rpx;
    right: 5rpx;
    width: 40rpx;
    height: 40rpx;
}


/* 按钮 */
.btn_box{
    padding:0 26rpx;
    margin-top:34rpx;
}
.btn{
    width:100%;
   
    border-radius: 6rpx;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    padding:0;
    margin:0;
}