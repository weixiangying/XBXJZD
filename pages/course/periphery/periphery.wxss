/* pages/course/periphery/periphery.wxss */
page{
    padding-top:10vh;
}
.box{
    width: 100%;
    padding-bottom: 10vh;
}
.userinfo-box{
    position: fixed;
    width: 100%;
    height: 12vh;
    overflow: hidden;
    top:0;
    left:0;
    background-color:#fff;
    z-index: 3;
}
.bg-img{
    width: 100%;
    height: 100%;
}
.user-info{
    position: absolute;
    top: 10vh;
    left: 7.5%;
    width: 85%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.ava{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 1px solid #fff;
    margin-right: 24rpx;
}
.user-cont{
    width: 50%;
}
.user-name{
    font-size: 30rpx;
    color: #b28949;
    margin-bottom: 16rpx;
}
.user-text{
    font-size: 28rpx;
    color: #b28949;
}
.search-box{
    position: absolute;
    bottom: 1vh;
    left: 5%;
    width: 450rpx;
    height: 7vh;
    border-radius: 10rpx;
    background: #fff;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    padding: 0 20rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    background-color:#f4f4f4;
}
.search-icon{
    width: 22rpx;
    height: 22rpx;
    margin-right: 16rpx;
}
input{
    width: 98%;
    height: 100%;
    line-height: 7vh;
    font-size: 30rpx;
    color: #333;
}
.place{
    color: #999;
}
.slide-box,
.goods-box{
    width: 100%;
}
.tit-box{
    width: 80%;
    margin: 20rpx auto;
    text-align: center;
}
.border{
    width: 30%;
    height: 1px;
    background: #4bace2;
    display: inline-block;
    vertical-align: middle;
}
.tit{
    color: #4bace2;
    font-size: 30rpx;
    margin: 0 20rpx;
    display: inline-block;
    vertical-align: middle;
}
.scroll-box {
    width: 100%;
    white-space: nowrap; 
    display: flex;
    display: -webkit-flex;
    background: #fff;
    padding: 24rpx; 
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.scroll-item {
    width: 274rpx;
    height: 100%; 
    display: inline-block;
    margin-right: 30rpx;
}
.slide-image{
    width: 100%;
    height: 200rpx;
}
.slide-price{
    width: 100%;
    padding: 0 5rpx;
    margin: 16rpx 0;
    font-size: 30rpx;
    color: #4bace2;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    text-align: center;
}
.slide-count{
    width: 100%;
    padding: 0 5rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-size: 24rpx;
    color: #999;
    text-align: center;
}
.goods-list{
    width: 100%;
    padding: 0 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    display: flex;
    display: -webkit-flex;
    align-items: flex-start;
    justify-content: space-between;
    flex-wrap: wrap;
}
.goods{
    width: 49%;
    margin-right: 2%;
    margin-bottom: 16rpx;
    padding-bottom: 10rpx;
    background: #fff;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.goods:nth-child(2n){
    margin-right: 0;
}
.goods-img{
    width: 100%;
    height: 200rpx;
}
.goods-name{
    width: 100%;
    height: 90rpx;
    line-height: 45rpx;
    font-size: 30rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    margin-bottom: 16rpx;
    padding: 0 10rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.goods-tips{
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 10rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.goods-price,
.buy-count{
    width: 50%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.goods-price{
    font-size: 30rpx;
    color: #4bace2;
}
.buy-count{
    font-size: 24rpx;
    color: #999;
    text-align: right;
}



