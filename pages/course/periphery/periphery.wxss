/*最近搜索过  */
.recently-box {
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;  
    padding: 20rpx 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.tit {
    font-size: 26rpx;
    color: #333;
}
.del-icon {
    width: 26rpx;
    height: 26rpx;
}

.list{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    flex-wrap: wrap;
    padding: 0 24rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.item {
    padding: 10rpx 42rpx;
    margin-top: 20rpx;
    margin-right: 20rpx;
    font-size: 30rpx;
    color: #333;
    border-radius: 10rpx;
    background-color: #f1f1f1;
}
