@import "../../../wxParse/wxParse.wxss";
.component-class {
    background-color: #f4f4f4 !important;
}

page {
    background-color: #ebebeb;
    padding-top: 0;
}

.box {
    width: 100%;
    height: 90vh;
    padding: 0 30rpx 9vh;
    margin-top: 10vh;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    overflow-y: scroll;
    background-color: transparent;
}

.item {
    width: 100%;
    padding: 4% 0;
    display: flex;
    display: -webkit-flex;
    align-items: flex-start;
}

.self-box {
    justify-content: flex-end;
}

.head-img {
    width: 10vw;
    height: 10vw;
}

.cont-box {
    max-width: 85%;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    display: flex;
    display: -webkit-flex;
    align-items: flex-start;
}
.cont-box-1{
    margin-left: 2.5%;
}
.cont-box-2{
    margin-right: 2.5%;
}

.msg {
    /* padding: 20rpx 30rpx 20rpx 20rpx; */
    padding: 20rpx;
    background: #48b947;
    font-size: 30rpx;
    color: #fff;
    white-space: normal;
    word-break: break-all;
    line-height: 1.5em;
    background-size: 100% 100%;
    border-radius: 10rpx;
}

.msg2 {
    /* padding: 20rpx 20rpx 20rpx 30rpx; */
    background: #fff;
    color: #333;
}
.triangle{
    border: 12rpx solid;
    border-color: transparent;
    margin-top: 10rpx;
}
.triangle1{
    border-left-color: #48b947;
}
.triangle2{
    border-right-color: #fff;
}

.sys-msg-box {
    width: 95%;
    padding: 2% 0;
    margin: 30rpx auto;
    text-align: center;
}

.sys-msg {
    padding: 2% 10rpx;
    font-size: 26rpx;
    color: #fff;
    background: #d4d4d4;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border-radius: 10rpx;
    word-break: break-all;
    line-height: 1.2em;
}

.bottom-box {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 8vh;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-around;
    padding: 1vh 0;
    background: #f4f4f4;
}
.bottom-box image {
    width: 8.5vw;
    height: 8vw;
}
.bottom-box .input-cont{
    width: 85%;
    height: 6vh;
    border-radius: 10rpx;
    border: 1rpx solid #dfdfdf;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    overflow: hidden;
}
.bottom-box .input-box {
    width: 80%;
    height: 100%;
    font-size: 26rpx;
    color: #333;
    padding: 0 2%;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.bottom-box .btn{
    width: 20%;
    height: 6vh;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 6vh;
    background: #48b947;
}

.bottom-box .input-box input {
    width: 100%;
    height: 100%;
}

.audio-box{
    width: 100%;
    height: 100%;
}
.icon-box{
    width: 22rpx;
    height: 30rpx;
    display: inline-block;
    vertical-align: text-top;
    line-height: 30rpx;
}
.audio-img{
    width: 22rpx;
    height: 30rpx;
}
.audio-img-2{
    width: 15rpx;
    height: 20rpx;
}
.audio-img-3{
    width: 8rpx;
    height: 12rpx;
}
.audio-dur{
    margin: 0 20rpx;
    font-size: 30rpx;
    color: #fff;
    display: inline-block;
}
.audio-dur-2{
    color: #333;
}
.img-box{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    overflow: hidden;
    margin: 0 10%;
}
.wxParse-img{
    width: 100%;
    height: 100%;
    display: block;
}
.WxEmojiView {
    font-size: 28rpx;
}