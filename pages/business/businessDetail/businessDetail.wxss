/* pages/business/businessDetail/businessDetail.wxss */
page{
  background-color:#f4f4f4;
  padding-top: 10vh;
}
.banner_box{
  width:100%;
  background-color:#333;
  padding:60rpx 0 25rpx;
}

.placeholder{
  color:a1a1a1;
  font-size:26rpx;
}
.top_textbox{
  width:504rpx;
  margin-left:216rpx;
}
.top_title{
  word-break: break-all;
  font-size:36rpx;
  color:#fff;
  line-height: 46rpx;
}
.top_title text{
  color:#E1A421;
  border:1rpx solid #E1A421;
  border-radius:5rpx;
  font-size:24rpx;
  padding:0 12rpx;
  line-height: 34rpx;
  height:34rpx;
}
.top_address{
  color:#ccc;
  word-break: break-all;
  line-height: 32rpx;
  margin-top:14rpx;
}
.top_imgbox{
  left:30rpx;
  top:50rpx;
  border-radius:6rpx;
  background-color:#fff;
  z-index: 101;
}
.top_img{
  
  width:166rpx;
  height:166rpx;
  border-radius:6rpx;
}

/*content  */
.content_box{
  padding:0 8rpx;
}
.item_box{
  width:100%;
  justify-content: space-between;
  flex-wrap: wrap; 
  margin-top:17rpx;
}
.item{
  width:49%;
  background-color:#fff;
  margin-bottom:10rpx;
  border-radius:5rpx;
}
.item_img{
  width:100%;
  height:362rpx;
  border-radius:5rpx;
}
.item_title{
  line-height:34rpx;
  margin-top:18rpx;
  height:68rpx;
  word-break: break-all;
  margin:0 10rpx;
}
.item_bottom{
  justify-content: space-between;
  line-height:72rpx;
  margin:0 10rpx;
}
.item_bottom1{
  color:#EA2929;
}
.item_bottom2{
  color:#777;
}
.item_money{
  font-weight:bold;
  font-size:30rpx;
}


/*tab  */


.tabs{   
    left: 0; 
    z-index: 10;
    width: 100%;
    height: 8vh;
    background: #fff;
    /* display: flex;
    display: -webkit-flex;
    align-items: center; */
    /* justify-content: space-around; */
    position:relative;
    top:0;
    padding-top: 30rpx;
    /* flex-wrap: nowrap; */
    white-space:nowrap;
}
.tab{
    position: relative;
    height: 100%;
}

.changeTabsCss{
  position:fixed;
  top:138rpx;
  padding-top: 0rpx; 
}

/*search  */
.navigation-back-icon{
    position: absolute;
    left: 30rpx;
    /* top: 62%; */
    top:88rpx;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    width: 18rpx;
    height: 32rpx;
}
.search_box{
  z-index: 102;
  position:fixed;
  top:0rpx;
  left:0;
  width:100%; 
  padding:60rpx 0 20rpx;
  background-color:#333;
}
.search{
  width:420rpx;
  background-color:#f4f4f4;
  margin-left:80rpx;
  height:58rpx;
  border-radius: 29rpx;
}
.search image{
  width:30rpx;
  height:30rpx;
  margin:0 17rpx 0 26rpx;
}
.search input{
  color:a1a1a1;
  font-size:26rpx;
  display:block;
  width:510rpx;
  height:58rpx;
  line-height:58rpx;
}
.placeholder{
  color:a1a1a1;
  font-size:26rpx;
}


.scroll-view{
  width:100%;
  white-space:nowrap;
}
.scroll-view_view{
  display: inline-block;
  margin-left:30rpx;
  height: 8vh;
  line-height: 8vh;
}
.currenttab{
  color:#4bace2;
}