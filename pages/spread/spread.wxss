page{
    padding-top:10vh;
    background-color:#f9f9fc;
}
.bigbox{
    padding:23rpx 30rpx 0;
}
.headerimg{
    width:100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 18rpx;
}
.name_img{
    width:32rpx;
    height: 30rpx;
    margin-left:10rpx;
}
