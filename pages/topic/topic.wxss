/* pages/top/top.wxss */
page {
   
    padding-top: 10vh;
    background-color:#f4f4f4;
}
.top{
    padding-top:19rpx;
}
.bigbox{
    padding:0 26rpx;
    
    margin-bottom:22rpx;
}
.itembigbox{
    background-color:#fff;
    width: 100%;
    margin-bottom:22rpx;
    border-radius: 6rpx;
}
.itembox{
    padding:36rpx 26rpx 29rpx;
    
}
.item_title{
    line-height: 45rpx;
}
.item_img{
    width:100%;
    height:240rpx;
    border-radius: 6rpx;
    margin-top:23rpx;
}
.votebox image{
    width:26rpx;
    height: 26rpx;
    margin-right:8rpx;
}
.votebox view{
    font-size:26rpx;
    color:#808080;
}
.votebox{
    margin-right:32rpx;
}
.itembtn{
    color:#fff;
    
    font-size:28rpx;
    text-align: center;
    width:180rpx;
    height:54rpx;
    line-height: 54rpx;
    border-radius: 27rpx;
}
.itembottom{
   margin-top:20rpx;
}
