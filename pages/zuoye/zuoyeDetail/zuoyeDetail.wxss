    line-height: 40rpx;
}
.play-icon{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-22%, -50%);
    -webkit-transform: translate(-22%, -50%);
    width: 0;
    height: 0;
    border: 20rpx solid;
    border-bottom-color: transparent;
    border-top-color: transparent;
    border-right-color: transparent;
    border-left-color: #fff;
    border-radius: 1px;
}