/* pages/recite/recite.wxss */
page{
    background-color:#f4f4f4;
}
.navigation-box {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    
    width: 100%;
    height: 10vh;
    padding: 0 30rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    /* border-bottom:1px solid #e7e7e7; */
}
.back-box{
    position: absolute;
    left: 30rpx;
    top: 0;
    width: 100rpx;
    height: 10vh;
}
.navigation-back-icon {
    position: absolute;
    left: 0;
    top: 62%;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    width: 18rpx;
    height: 32rpx;
}
.navigation-tit{
    width: 50%;
    height: 100%;
    line-height: 13vh;
    text-align: center;
    color: #fff;
    font-size: 33rpx;
    margin: 0 auto;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.recite_bg{
    width:100%;
    height:352rpx;
    position:fixed;
    top:0;
}
.choice_box{
    position:fixed;
    top:240rpx;
    width:60%;
    margin-left:20%;
    border: 2px solid #83d4e7;
    height: 64rpx;
    border-radius: 32rpx;
    /* margin:0 auto; */
}
.choice_text{
    line-height: 64rpx;
    font-size:30rpx;
    color:#333;
}
.choice_line{
    background-color:#dfdfdf;
    height: 30rpx;
    width:1px;
    margin:0 16rpx;
}

.picker_img{
    width:30rpx;
    height:30rpx;
    margin-left:20rpx;
}



/* item */
.itembigbox{
    padding:0 26rpx;
    margin-top:370rpx;
    background-color:#f4f4f4;
}
.itembox{
    background-color:#fff;
    padding:30rpx 30rpx 34rpx 42rpx;
    margin-bottom:20rpx;
    border-radius: 6rpx;
}
.w480{
    width:480rpx;
}
.title{
    font-size:36rpx;
    line-height: 50rpx;
}
.author{
    line-height: 70rpx;
    color:#808080;
}
.item_text{
    color:#808080;
    font-size:24rpx;
    border:1px solid #BFBFBF;
    display: inline-block;
    line-height: 30rpx;
    padding:0 7rpx;
    border-radius: 6rpx;
    margin-right:16rpx;
}
.circle_box{
    margin:24rpx 30rpx 0  0;
     width:92rpx;
    height:92rpx;
}
.score_img{
    width:92rpx;
    height:92rpx;
}
.circle_box view{
    line-height: 92rpx;
    width:92rpx;
    text-align: center;
    left:0;top:0;
    color:#FC8747;
    font-size:30rpx;
}
.pickbox{
    position:fixed;
    left:0;
    top:0;
    z-index:200;
    width:100%;
    height:100vh;
    background:rgba(0,0,0,.7);
}
.pick_smbox{
     position:relative;
    top:50%;
    left:50%;
    transform:translate(-50%, -50%);
    -webkit-transform:translate(-50%, -50%);
    width:73%;    
    background-color:#fff;
    border-radius: 10rpx;
}
.pick_title{
    line-height: 94rpx;
    border-bottom:1px solid #dfdfdf; 
    text-align: center;   
}
.pick_content{
    height:550rpx;
}
.pick_leftbox{
    width:50%;
    background-color:#f8f8f8;
}
.pick_left_item{
    color:#666;
    line-height: 110rpx;
    text-align: center;
}
.pick_rightbox{
    width:50%;
    background-color:#fff;
}
.pick_right_item{
    color:#666;
    line-height: 110rpx;
    text-align: center;
}
.c_gf{
    color:#66D1CC !important;
}