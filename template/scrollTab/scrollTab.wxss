.fixed-scroll-view-box {
    position: fixed;
    top: 10vh;
    left: 0;
    z-index: 10;
    width: 100%;
    height: 80rpx;
    background: #fff;
    border-bottom: 1rpx solid #e8e8e8;
}
.scroll-view{
    width: 100%;
    height: 100%;
    white-space: nowrap;
}
.scroll-item {
    position: relative;
    height: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    display: inline-block;
    line-height: 80rpx;
}
.scroll-item-text{
    width: 100%;
    height: 100%;
    color: #2e2e2e;
    font-size: 28rpx;
}
.scroll-item-line {
    position: absolute;
    left: 35%;
    bottom: 0;
    width: 30%;
    height: 4rpx;
    background: transparent;
}
.active .scroll-item-text{
    color: #333;
    font-size:32rpx;
}
.active .scroll-item-line{
    background: #61ACE3;
}
